---
import Band from '../../../public/images/banners/banner_band.webp';
import Eric from '../../../public/images/banners/banner_eric.webp';
import BenjiFabian from '../../../public/images/banners/banner_fabi_benji.webp';
import Georg from '../../../public/images/banners/banner_georg.webp';

const images = [
  { src: Band, alt: 'Band members', width: 1200, height: 800 },
  { src: Eric, alt: 'Eric - Bass', width: 1200, height: 800 },
  { src: BenjiFabian , alt: 'Benji and Fabian - Keys and Lead Guitar/Vocals', width: 1200, height: 800 },
  { src: Georg, alt: 'Georg - Drums', width: 1200, height: 800 }
];
---

<div id="banner-slider" class="grid w-full max-h-screen" role="region" aria-label="Image carousel">
  {images.map(({ src, alt, width, height }, i) => (
    <img
      src={src.src}
      alt={alt}
      width={width}
      height={height}
      class={`col-start-1 row-start-1 w-full max-h-screen object-cover transition-opacity duration-1000 ease-in-out opacity-0 ${i === 0 ? "opacity-100" : ""}`}
      style={`z-index: ${i === 0 ? 2 : 1}`}
      data-slide={i}
      loading={i === 0 ? "eager" : "lazy"}
      decoding={i === 0 ? "sync" : "async"}
    />
  ))}
</div>

<script>
  let currentIndex = 0;
  let slides: NodeListOf<HTMLElement>;
  let intervalId: ReturnType<typeof setInterval> | null = null;
  
  const SLIDE_DURATION = 16000;

  function updateSlide(newIndex: number) {
    const currentSlide = slides[currentIndex];
    const nextSlide = slides[newIndex];
    
    if (!currentSlide || !nextSlide) return;
    
    // Start next slide transition
    nextSlide.style.zIndex = "2";
    nextSlide.classList.add("opacity-100");
    
    // Fade out current slide
    setTimeout(() => {
      currentSlide.classList.remove("opacity-100");
      currentSlide.style.zIndex = "1";
    }, 50);
    
    currentIndex = newIndex;
  }

  function startSlideshow() {
    if (intervalId) clearInterval(intervalId);
    
    intervalId = setInterval(() => {
      const nextIndex = (currentIndex + 1) % slides.length;
      updateSlide(nextIndex);
    }, SLIDE_DURATION);
  }

  function stopSlideshow() {
    if (intervalId) {
      clearInterval(intervalId);
      intervalId = null;
    }
  }

  // Initialize on DOM load
  window.addEventListener("DOMContentLoaded", () => {
    const container = document.getElementById("banner-slider");
    if (!container) return;

    slides = container.querySelectorAll("[data-slide]");
    if (!slides.length) return;

    // Initialize z-index for slides
    slides.forEach((slide, i) => {
      slide.style.zIndex = i === 0 ? "2" : "1";
    });

    startSlideshow();
  });

  // Cleanup on page unload
  window.addEventListener("beforeunload", stopSlideshow);
</script>