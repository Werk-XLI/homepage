---
import Logo from "../logo/Logo.astro";
---

<div x-data="{ open: false }" class="relative">
    <div
        class="flex flex-row justify-between items-center bg-gradient-to-b from-black/50 to-transparent p-4"
    >
        <button
            onclick="window.location.href='/';"
            class="justify-start items-center p-4"
        >
            <Logo width={"4rem"} />
        </button>

        <!-- Hamburger Button -->
        <button
            @click="open = true"
            aria-label="Open menu"
            class="justify-end items-center p-4"
        >
            <i class="ti ti-menu-2 text-2xl"></i>
        </button>
    </div>

    <!-- Curtain Menu -->
    <div
        x-show="open"
        x-transition:enter="transition-transform duration-300"
        x-transition:enter-start="translate-x-full"
        x-transition:enter-end="translate-x-0"
        x-transition:leave="transition-transform duration-300"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
        class="fixed flex inset-0 justify-center items-center bg-black/80"
        style="display: none;"
    >
        <div class="w-full h-full flex flex-col justify-center items-center p-4">
            <nav class="flex flex-col text-2xl items-center">
                <a href="/#live" @click="open = false" class="p-4">Live</a>
                <a href="/#music" @click="open = false" class="p-4">Musik</a>
                <a href="/videos" @click="open = false" class="p-4">Videos</a>
                <a href="/gallery" @click="open = false" class="p-4">Gallerie</a>
                <a href="/shop" @click="open = false" class="p-4">Shop</a>
                <a href="/contact" @click="open = false" class="p-4">Kontakt</a>
            </nav>
            <!-- Close Button at the bottom -->
            <button 
                @click="open = false" 
                class="p-4" 
                aria-label="Close menu"
            >
                <i class="ti ti-x text-2xl"></i>
            </button>
        </div>
        <div class="absolute inset-0" @click="open = false"></div>
    </div>
</div>
